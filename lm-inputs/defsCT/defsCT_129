e{ }\hbox{{\definecolor{% pgfstrokecolor}{rgb}{0,0,0}\pgfsys@color@rgb@stroke{0}{0}{0}\pgfsys@invoke{ }% \pgfsys@color@rgb@fill{0}{0}{0}\pgfsys@invoke{ }\hbox{{$\cdots$}} }}\pgfsys@invoke{\lxSVG@closescope }\pgfsys@endscope}}} \pgfsys@invoke{\lxSVG@closescope }\pgfsys@endscope}}} \par{}{{}}{}{{{}}{}{}{}{}{}{}{}{}}{}\pgfsys@moveto{113.811024pt}{0.0pt}% \pgfsys@moveto{115.811024pt}{0.0pt}\pgfsys@curveto{115.811024pt}{1.104569pt}{1% 14.915593pt}{2.0pt}{113.811024pt}{2.0pt}\pgfsys@curveto{112.706455pt}{2.0pt}{1% 11.811024pt}{1.104569pt}{111.811024pt}{0.0pt}\pgfsys@curveto{111.811024pt}{-1.% 104569pt}{112.706455pt}{-2.0pt}{113.811024pt}{-2.0pt}\pgfsys@curveto{114.91559% 3pt}{-2.0pt}{115.811024pt}{-1.104569pt}{115.811024pt}{0.0pt}\pgfsys@closepath% \pgfsys@moveto{113.811024pt}{0.0pt}\pgfsys@fillstroke\pgfsys@invoke{ } {}{{}}{} {}{} {}{}{{{}{}}}{}\pgfsys@moveto{113.811024pt}{0.0pt}\pgfsys@lineto{113.811024pt}{% 0.0pt}\pgfsys@stroke\pgfsys@invoke{ }\hbox{\hbox{{\pgfsys@beginscope% \pgfsys@invoke{ }{{}{}{{ {}{}}}{ {}{}} {{}{{}}}{{}{}}{}{{}{}} { }{{{{}}\pgfsys@beginscope\pgfsys@invoke{ }\pgfsys@transformcm{1.0}{0.0}{0.0}{1% .0}{110.061081pt}{-10.532893pt}\pgfsys@invoke{ }\hbox{{\definecolor{% pgfstrokecolor}{rgb}{0,0,0}\pgfsys@color@rgb@stroke{0}{0}{0}\pgfsys@invoke{ }% \pgfsys@color@rgb@fill{0}{0}{0}\pgfsys@invoke{ }\hbox{{$n$}} }}\pgfsys@invoke{\lxSVG@closescope }\pgfsys@endscope}}} \pgfsys@invoke{\lxSVG@closescope }\pgfsys@endscope}}} {}{{}}{} {{}{}}{{}} {{{}}{{}}}{{}}{{{}}{{}}}{}{{}}{}{}{}{}\pgfsys@moveto{113.811024pt}{0.0pt}% \pgfsys@curveto{98.55378pt}{12.802363pt}{126.613387pt}{15.257244pt}{113.811024% pt}{0.0pt}\pgfsys@stroke\pgfsys@invoke{ } \par{}{{}}{} {}{}{}\pgfsys@moveto{0.0pt}{0.0pt}\pgfsys@lineto{28.452756pt}{0.0pt}% \pgfsys@stroke\pgfsys@invoke{ } {}{{}}{} {}{}{}\pgfsys@moveto{28.452756pt}{0.0pt}\pgfsys@lineto{56.905512pt}{0.0pt}% \pgfsys@stroke\pgfsys@invoke{ } {}{{}}{} {}{}{}\pgfsys@moveto{56.905512pt}{0.0pt}\pgfsys@lineto{76.822441pt}{0.0pt}% \pgfsys@stroke